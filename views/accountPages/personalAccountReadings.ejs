<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Віньковецький комунсервіс</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" >
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<link href="/style/main.css" rel="stylesheet" type="text/css">
<body cla>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <div class=" persAc-main-container">
            <%-  include('../partials/persAcountNav'); %>
            <div class="persAc-main-sec-container">
                <div class="persAc-th-cont persAc-th-cont-main w-100">
                    <div class="th-cont-title ">Надання показників</div>
                    <div class="th-cont-body pers_ac_inf_block">
                        <form class="form-readings" action="/personal-account/new-readings" method="POST">
                            <table class="w-100 readings-table" >
                                <tr>
                                <th>Послуга</th>
                                <th>Розташування</th>
                                <th>Модель</th>
                                <th>Серійний №</th>
                                <th colspan="2">
                                    <div class="">Останні показники</div>
                                    <div class="d-flex">
                                        <div class="w-50 th-div th-div-rb">Дата</div>
                                        <div class="w-50 th-div">Показання</div>
                                    </div>
                                </th>
                                <th>Введіть нові показання</th>
                                </tr>
                                
                                    <% for(var i=0; i < meters.length; i++) { %>
                                        <tr>
                                            <td><%= meters[i].service%></td>
                                            <% if(meters[i].location != undefined){ %>
                                                <td><%= meters[i].location%></td>
                                            <% }else{ %>
                                                <td>Невідомо</td>
                                            <% } %>
                                            <% if(meters[i].brand != undefined){ %>
                                                <td><%= meters[i].brand%></td>
                                            <% }else{ %>
                                                <td>Невідомо</td>
                                            <% } %>
                                            <% if(meters[i].serial_number != undefined){ %>
                                                <td><%= meters[i].serial_number%></td>
                                            <% }else{ %>
                                                <td>Невідомо</td>
                                            <% } %>
                                            <% if(meters[i].last_readinng_date != undefined){ %>
                                                <td style="width: 100px;"><%=moment( meters[i].last_readinng_date ).format("D-MM-YYYY")%></td>
                                            <% }else{ %>
                                                <td>Невідомо</td>
                                            <% } %>
                                            <% if(meters[i].last_readinng!= undefined){ %>
                                                <td><%= meters[i].last_readinng%></td>
                                            <% }else{ %>
                                                <td>Невідомо</td>
                                            <% } %>
                                                <td><input placeholder="Введіть показник" id="<%=meters[i].id_meters%>" required name="<%=meters[i].id_meters%>" type="number" step=".01"></td>
                                        </tr>
                                    <% } %>
                                

                            </table>
                            <button class="btn btn-primary btn-pers-Ac-navbar btn-form-red-sub" type="submit">Відправити показники</button>
                        </form>
                       
                    </div>
                </div>
                
            </div>
            <div class="persAc-main-sec-container">
                <div class="persAc-th-cont persAc-th-cont-main w-100">
                    <div class="th-cont-title ">Минулі показники</div>
                    <div class="th-cont-body pers_ac_inf_block">
                        <div  id="table-wrapper">
                            <div id="table-scroll">
                                <table class="w-100 readings-table all-readings-table" >
                                    <tr>
                                    <th>Послуга</th>
                                    <th>Cерійний № лічильника</th>
                                    <th>Розташування</th>
                                    <th>Показання</th>
                                    <th>Дата</th>
                                    <th>Джерело</th>
                                    </tr>
                                        <% for(var i=0; i < readings.length; i++) { %>
                                            <tr>
        
                                                <% if(readings[i].service != undefined){ %>
                                                    <td><%= readings[i].service%></td>
                                                <% }else{ %>
                                                    <td>Невідомо</td>
                                                <% } %>
        
                                                <% if(readings[i].serial_number != undefined){ %>
                                                    <td><%= readings[i].serial_number%></td>
                                                <% }else{ %>
                                                    <td>Невідомо</td>
                                                <% } %>
        
                                                <% if(readings[i].location != undefined){ %>
                                                    <td><%= readings[i].location%></td>
                                                <% }else{ %>
                                                    <td>Невідомо</td>
                                                <% } %>
        
                                                <% if(readings[i].reading != undefined){ %>
                                                    <td><%= readings[i].reading%></td>
                                                <% }else{ %>
                                                    <td>Невідомо</td>
                                                <% } %>
                                                
                                                <% if(readings[i].reading_date != undefined){ %>
                                                    <td><%= moment(readings[i].reading_date ).format("D-MM-YYYY")%></td>
                                                <% }else{ %>
                                                    <td>Невідомо</td>
                                                <% } %>
                                                
                                                <% if(readings[i].source != undefined){ %>
                                                    <td><%= readings[i].source%></td>
                                                <% }else{ %>
                                                    <td>Невідомо</td>
                                                <% } %>
                                                   
                                            </tr>
                                        <% } %>
                                    
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
        </div>
    </main>

    <footer >
        <div style="position: absolute;bottom: 0;" class="w-100 footer-mobile">
            <%- include('../partials/footer'); %>
        </div>
    </footer>

    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js">
	</script> 

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js">
	</script>
    <script src="scripts/persAc.js"></script>

</body>
