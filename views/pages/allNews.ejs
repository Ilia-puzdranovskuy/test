<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Віньковецький комунсервіс</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" >
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<link href="/style/main.css" rel="stylesheet" type="text/css">
<body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main class="main-news">
          <% if(news == undefined || news.length==0){ %>
            <h3 class="text-center mt-5" >Вибачте, але поки немає ніяких новин.</h3>
          <% }else{ %>
            <h2 class="text-center mt-5" >Новини</h2>
            <p class="text-center">  <svg xmlns="http://www.w3.org/2000/svg" width="30" height="3" viewBox="0 0 30 3">
                <rect id="Rectangle_6" data-name="Rectangle 6" width="30" height="3" fill="#f6a937"/>
              </svg></p>
              <div class=" persAc-main-container d-flex ">
            <div class="grid-all-news">

                <% for(var i=0; i < news.length; i++) { %>
                    <div class="small-news-all-container d-flex ">
                        <div class="small-news-image" style="background-image: url('<%= news[i].image%>');">
                            <div class="date-block-main"><%=moment( news[i].date ).format("D.MM.YYYY")%></div>
                        </div>
                        <div class="small-news-text-container ">
                            <h4><%= news[i].header%></h4>
                            <p><%= news[i].body.slice(0, 120)+' ...'%></p>
                            <a href="/detail-news?newsId=<%= news[i].id_news%>" class="fw-bold text-decoration-none links-more">Читати детальніше</a>
                        </div>
                    </div>
                <% } %>
          </div>
        </div>

        <% } %>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>

    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js">
	</script> 
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js">
	</script> 
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js">
	</script>
    	<script src="scripts/script.js">
        </script>
</body>
     
  
 