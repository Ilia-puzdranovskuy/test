<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Адмін панель</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="/admin/style/style.css" rel="stylesheet" type="text/css">
<body class="bg-light d-flex">
    <%- include('../admin_partials/panelNav'); %>
    <main class="">
      <div class="p-1 text-danger"><h5>Перенаправлення платежу</h5><h5 style="color: blue;"><%= errors%></h5></div>
      <div class="block-bg mw-100">
        <div class="p-1 text-danger"><h5>Перенаправлення платежу</h5></div>
        <form method="post" action="/admin-panel-controll/payment-redirect-post">
          <div class="mb-3">
            <label for="image" class="form-label">Особовий рахунок 1 (знімаються кошти)</label>
            <input type="text" class="form-control"  name="persAc1" required>
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">ID платежу 1 (знімаються кошти)</label>
            <input type="number" class="form-control"  name="payIdFrom" required>
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Особовий рахунок 2 (додаються кошти)</label>
            <input type="text" class="form-control"  name="persAc2" required>
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">ID платежу 2 (додаються кошти)</label>
            <input type="number" class="form-control"  name="payIdTo" required>
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Сума</label>
            <input type="number" class="form-control"  name="sum" required>
          </div>
          <button type="submit" class="btn btn-primary">Надіслати</button>
        </form>
      </div>
    </main>
    
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> 
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/admin/js/scripts.js"></script>
</body>