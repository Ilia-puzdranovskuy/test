<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Адмін панель</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" >
<link href="/admin/style/style.css" rel="stylesheet" type="text/css">
<body>
    <div class="w-25 mx-auto mt-5">
        <form id="form" action="/admin-panel-controll/auth" method="post">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">login</label>
              <input required type="text" class="form-control" id="exampleInputEmail1" name="login">
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Password</label>
              <input required type="password" class="form-control" id="exampleInputPassword1" name="password">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Key</label>
                <input required type="password" class="form-control" id="exampleInputPassword1" name="key">
            </div>
            <div  class="g-recaptcha" data-callback="imNotARobot" data-sitekey="6LdH3oAkAAAAAJU3fgEjXSObb8NZi4BR9mZuqe1v" ></div>
            <p id="eror" style="color: red;">
                <% if (errors) { %>
                <%= errors %>
                <% } %></p>
            <button type="submit" class="btn btn-primary">Ввійти</button>
          </form>
    </div>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> 
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"></script>
    <script src="https://www.google.com/recaptcha/api.js?render="></script>
    <script src="/admin/js/scripts.js"></script>
    <script>
        document.getElementById("form").addEventListener("submit",function(evt){
            
            var response = grecaptcha.getResponse();
            if(response.length == 0) 
            { 
              document.getElementById("eror").innerHTML = "Помилка проходження reCAPCHA!"
                evt.preventDefault();
                return false;
            }
            });
    </script>
</body>