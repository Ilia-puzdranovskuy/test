
<html style="font-family: PTSans;">
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Адмін панель</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="/admin/style/style.css" rel="stylesheet" type="text/css">
<body  class="bg-light d-flex">
    <%- include('../admin_partials/panelNav'); %>
    <main class="">
      <div class="p-1 text-danger"><h5>Швидкі платежі </h5><h5 style="color: blue;"><%= errors%></h5></div>

      <div class="block-bg mw-100" id="auditPDf">
        <div class="p-1 text-danger"><h5 id="nameFile">Швидкі платежі</h5></div>
        <div class="options-fast">
          <span>Послуга</span>
          <select class="form-select" name="service" required id="service">
            <option value="Водопостачання" selected>Водопостачання</option>
            <option value="Водовідведення">Водовідведення</option>
            <option value="Вивіз сміття">Вивіз сміття</option>
          </select>
          <span>Джерело</span>
          <select class="form-select" name="way" required id="way">
            <option value="Каса" selected>Каса</option>
            <option value="ОщадБанк">ОщадБанк</option>
            <option value="УкрПошта">УкрПошта</option>
            <option value="Приватбанк">Приватбанк</option>
            <option value="Інше джерело">Інше джерело</option>
          </select>
          <span>Тип</span>
          <select class="form-select" name="type" id="type">
            <option value="Готівковий" selected>Готівковий</option>
            <option selected value="Безготівковий">Безготівковий</option>
          </select>
          <div>Сумма:<span id="sum">0</span>   Кількість:<span id="count">0</span> <button onclick="sumAndCount()" class="btn btn-secondary">Обновити</button></div>
          <div><button onclick="if(confirm('Ви впевнені?')) send();" class="btn btn-danger">Завантажити</button></div>
        </div>
                <div  id="table-wrapper">
                    <div id="table-scroll">
                        <table class="w-100 search-result-table" >
                          <thead>
                            <tr>
                              <th>Номер.рах.</th>
                              <th>Сума</th>
                              <th>Власник</th>
                              <th>Адресс</th>
                              <th>Населений п.</th>
                              <th>id</th>
                              <th></th>
                            </tr>
                          </thead>
                          <tbody id="tblbodyfastpay">
                            <tr>
                              <td><input type="text" class="persAcNumber upd"></td>
                              <td><input type="number" class="inpSum upd"></td>
                              <td></td>
                              <td></td>
                              <td></td>
                              <td></td>
                              <td></td>
                            </tr>
                          </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </div>

    </main>
    
    <script src='https://cdn.jsdelivr.net/npm/pdfmake@latest/build/pdfmake.min.js'></script>
    <script src='https://cdn.jsdelivr.net/npm/pdfmake@latest/build/vfs_fonts.min.js'></script>
    <!-- html-to-pdfmake file: -->
    <script src="https://cdn.jsdelivr.net/npm/html-to-pdfmake/browser.js"></script>
    <script src="/admin/js/audit.js"></script>
