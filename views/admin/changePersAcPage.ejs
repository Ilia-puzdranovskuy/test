<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Адмін панель</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="/admin/style/style.css" rel="stylesheet" type="text/css">
<body class="bg-light d-flex">
    <%- include('../admin_partials/panelNav'); %>
    <main class="">
      <div class="p-1 text-danger"><h5>Редагування інформації особового рахунку <span  style="text-decoration: underline;"><%= persAc[0].personal_account%> <%= persAc[0].full_name%></span></h5><h5 style="color: blue;"><%= errors%></h5></div>
      <div class="block-bg mw-100">
        <div class="p-1 text-danger"><h5>Редагування інформації</h5></div>
        <form method="post" action="/admin-panel-controll/change-information?pers-ac-id=<%=persAc[0].id_personal_account%>">
          <div class="mb-3">
            <label for="header" class="form-label">Кількість людей</label>
            <input type="text" class="form-control" id="header" value="<%= persAc[0].number_of_people%>" name="numberPeople" >
          </div>
          <div class="mb-3">
            <label for="header" class="form-label">Баланс</label>
            <input type="text" class="form-control" id="header" value="<%= persAc[0].balance%>" name="balance" >
          </div>
          <div class="mb-3">
            <p>Послуги</p>
            <select id="select"  name="services" required multiple>
              <% if(persAc[0].services != undefined&&persAc[0].services.includes('Водопостачання')){ %>
                <option selected value="Водопостачання">Водопостачання</option>
              <% }else{ %>
                <option value="Водопостачання">Водопостачання</option>
              <% } %>

              <% if(persAc[0].services != undefined&&persAc[0].services.includes('Водовідведення')){ %>
                <option value="Водовідведення" selected>Водовідведення</option>
              <% }else{ %>
                <option value="Водовідведення">Водовідведення</option>
              <% } %>

              <% if(persAc[0].services != undefined&&persAc[0].services.includes('Вивізсміття')){ %>
                <option value="Вивізсміття" selected>Вивізсміття</option>
              <% }else{ %>
                <option value="Вивізсміття">Вивізсміття</option>
              <% } %>
            </select>
          </div>

          <div class="mb-3">
            <p>Угода</p>

            <select id="selectAgreement"  name="agreement" required >
              <% if(persAc[0].agreement != undefined && persAc[0].agreement =="Є"){ %>
                <option  value="Немає">Немає</option>
                <option selected value="Є">Є</option>
              <% }else{ %>
                <option selected value="Немає">Немає</option>
                <option  value="Є">Є</option>
              <% } %>

            </select>

          </div>

          <div class="mb-3">
            <p>Скважина</p>
            <select id="waterWell"  name="waterWell" required >
              <option  value="">Виберіть</option>

              <% if(persAc[0].water_well != undefined&&persAc[0].water_well == "Віньківці"){ %>
                <option selected value="Віньківці">Віньківці</option>
              <% }else{ %>
                <option  value="Віньківці">Віньківці</option>
              <% } %>

              <option  value=""></option>
              <option  value=""></option>

              <% if(persAc[0].water_well != undefined&&persAc[0].water_well == "Лілія"){ %>
                <option selected value="Лілія">Лілія</option>
              <% }else{ %>
                <option  value="Лілія">Лілія</option>
              <% } %>

              <% if(persAc[0].water_well != undefined&&persAc[0].water_well == "Березина"){ %>
                <option selected value="Березина">Березина</option>
              <% }else{ %>
                <option  value="Березина">Березина</option>
              <% } %>

              <% if(persAc[0].water_well != undefined&&persAc[0].water_well == "Подолянське"){ %>
                <option  value="Подолянське">Подолянське</option>
              <% }else{ %>
                <option  value="Подолянське">Подолянське</option>
              <% } %>

            </select>
          </div>
          <button type="submit" class="btn btn-primary">Змінити</button>
        </form>
      </div>
      

    </main>
    
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> 
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/admin/js/scripts.js"></script>
</body>