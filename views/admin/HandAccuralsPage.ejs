<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Адмін панель</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="/admin/style/style.css" rel="stylesheet" type="text/css">
<body class="bg-light d-flex">
    <%- include('../admin_partials/panelNav'); %>
    <main class="">
      <div class="p-1 text-danger"><h5>Ручні нарахуванння </h5><h5 style="color: blue;"><%= errors%></h5></div>
      <div class="block-bg mw-100">
        <div class="p-1 text-danger"><h5>Здійснити ручне нарахуванняза за вивіз сміття</h5></div>
        <form method="post" action="/admin-panel-controll/new-hand-accural-rubbish?persAcId=<%=persAcId%>">
          <table class="search-result-table">
            <thead>
              <tr>
                <th>Особ.рах</th>
                <th>Кількість людей</th>
                <th>Тип рахунку</th>
                <th>Тариф</th>
                <th>Сумма</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%=persAcAndTrifs[0].personal_account%></td>
                <td><input placeholder="Кількість людей" id="numPRub" onchange="sumRubish()" required name="numP" type="number" value="<%=persAcAndTrifs[0].number_of_people%>" ></td>
                  <% if(persAcAndTrifs[0].type!= undefined){ %>
                    <% if(persAcAndTrifs[0].type==1){ %>
                      <td>Юрид <input   required  name="typeAc"  value="<%=persAcAndTrifs[0].type%>" style="display: none;"></td>
                    <% }%>
                    <% if(persAcAndTrifs[0].type==2){ %>
                      <td>ФОП <input   required  name="typeAc"  value="<%=persAcAndTrifs[0].type%>" style="display: none;"></td>
                    <% }%>
                  <% }else{ %>
                    <td>Невідомо</td>
                  <% } %>
                <td><input placeholder="Тариф"  required id="tarifRub" onchange="sumRubish()" name="tarif" type="number" value="<%=persAcAndTrifs[0].rubbish%>" step="any"></td>
                <td><input placeholder="Cумма"  required id="sumRub" name="sum" type="number"   step="any" ></td>
                <td><button type="submit" class="btn btn-dark">Зберегти</button></td>
              </tr>
            </tbody>
            </table>
        </form>
        </div>


      <div  class="table-wrapper">
      
      <div  class="table-wrapper">
      <div class="table-scroll">
      <div class="block-bg mw-100">
        <div class="p-1 text-danger"><h5>Нарахування</h5></div>
        <table class="search-result-table">
          <thead>
            <tr>
              <th>ID-нарах.</th>
              <th>За послугу</th>
              <th>Дата</th>
              <th>Початковий показник</th>
              <th>Кінцевий показник</th>
              <th>Спожив. води</th>
              <th>Нарах. вода</th>
              <th>Спожив. водовідвед.</th>
              <th>Нарах. водовідвед.</th>
              <th>Кільк.людей</th>
              <th>Нарах. вивізсм.</th>
              <th>Сума</th>
              <th>Тип особ.рах</th>
              <th>Автор нарах.</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i < accurals.length; i++) { %>
              <tr>

                <% if(accurals[i].id_accrual!= undefined){ %>
                  <td><%=accurals[i].id_accrual%></td>
                <% }else{ %>
                  <td>Невідомо</td>
                <% } %>

                <% if(accurals[i].type!= undefined){ %>
                  <td><%=accurals[i].type%></td>
                <% }else{ %>
                  <td>Невідомо</td>
                <% } %>

                <% if(accurals[i].date!= undefined){ %>
                  <td><%=moment(  accurals[i].date).format("YYYY-MM-D")%></td>
                <% }else{ %>
                  <td>Невідомо</td>
                <% } %>

                <% if(accurals[i].reading!= undefined){ %>
                  <td>
                    Показник: <%= accurals[i].reading %><br>
                    Дата: <%=moment(  accurals[i].reading_date).format("YYYY-MM-D")%><br>
                    Джерело: <%= accurals[i].source %>
                  </td>
                <% }else{ %>
                  <td>Невідомо</td>
                <% } %>

                <% if(accurals[i].reading!= undefined){ %>
                  <td>
                    Показник: <%= accurals[i].reading %><br>
                    Дата: <%=moment(  accurals[i].reading_date).format("YYYY-MM-D")%><br>
                    Джерело: <%= accurals[i].source %>
                  </td>
                <% }else{ %>
                  <td>Невідомо</td>
                <% } %>

                <% if(accurals[i].consumption_water!= undefined){ %>
                  <td><%= accurals[i].consumption_water %></td>
                <% }else{ %>
                  <td>Невідомо</td>
                <% } %>

                <% if(accurals[i].accrual_water!= undefined){ %>
                  <td><%= accurals[i].accrual_water %></td>
                <% }else{ %>
                  <td>Невідомо</td>
                <% } %>

                <% if(accurals[i].consumption_drainage!= undefined){ %>
                  <td><%= accurals[i].consumption_drainage %></td>
                <% }else{ %>
                  <td>Невідомо</td>
                <% } %>

                <% if(accurals[i].accrual_drainage!= undefined){ %>
                  <td><%= accurals[i].accrual_drainage %></td>
                <% }else{ %>
                  <td>Невідомо</td>
                <% } %>

                <% if(accurals[i].num_people!= undefined){ %>
                  <td><%= accurals[i].num_people %></td>
                <% }else{ %>
                  <td>Невідомо</td>
                <% } %>

                <% if(accurals[i].accrual_rubbish!= undefined){ %>
                  <td><%= accurals[i].accrual_rubbish %></td>
                <% }else{ %>
                  <td>Невідомо</td>
                <% } %>

                <% if(accurals[i].sum!= undefined){ %>
                  <td><%= accurals[i].sum %></td>
                <% }else{ %>
                  <td>Невідомо</td>
                <% } %>

                <% if(accurals[i].personal_account_type== "1"){ %>
                  <td>Юрид</td>
                <% }else{ %>
                  <td>ФОП</td>
                <% } %>

                <% if(accurals[i].author_create!= undefined){ %>
                  <td><%= accurals[i].author_create %></td>
                <% }else{ %>
                  <td>Невідомо</td>
                <% } %>

              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      </div>
      </div>
    </main>
    
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> 
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/admin/js/scripts.js"></script>
  <script src="/admin/js/accural.js"></script>
</body>